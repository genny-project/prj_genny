package life.genny.rules;

import life.genny.qwanda.message.QDataAnswerMessage;
import life.genny.models.GennyToken;
import life.genny.rules.QRules;
import life.genny.utils.BaseEntityUtils;
import life.genny.qwanda.Answer;
import life.genny.utils.OutputParam;
import io.vertx.core.json.JsonObject;

import java.util.List;
import java.util.ArrayList;

rule "SPECIFIC_SHORTLIST"
    ruleflow-group 'SpecificEnter'
    no-loop true
    salience 1 
    when
	 	userToken : GennyToken (code != "PER_SERVICE" )
		serviceToken : GennyToken (code == "PER_SERVICE" )
		bucketCode : String(bucketCode.equals("Shortlist"))
	  
     then
    
		JsonObject jsonTemplates = new JsonObject();
		jsonTemplates.put("1", "EMAIL_TEMPLATE_SHORTLIST_STUDENT");
		jsonTemplates.put("2", "EMAIL_TEMPLATE_SHORTLIST_SCHOOL");
		jsonTemplates.put("3", "EMAIL_TEMPLATE_SHORTLIST_SALESTEAM");
		jsonTemplates.put("4", "SMS_TEMPLATE_SHORTLIST_STUDENT");
		System.out.println("Shortlist Notitifications Template Json: " + jsonTemplates.toString());
	 
 		
 		retract(bucketCode)
 		
 
end
