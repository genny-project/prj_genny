rule "HELPER_LNK_HCR"
	ruleflow-group 'DataProcessing'
			salience 5000
	when
		beUtils : BaseEntityUtils()
		answer : Answer( attributeCode == "LNK_HOST_COMPANY_REP")
		answersToSave : Answers()
		ruleDetails : RuleDetails()
		output : OutputParam( )
		serviceToken : GennyToken( code == "PER_SERVICE")
		userToken : GennyToken( code != "PER_SERVICE")

	then
		System.out.println("HELPER_LNK_HCR fired");
		System.out.println(ruleDetails+" "+drools.getRule().getName()+" Processing Helper HCR SELECTION Answer/Data : " + answer );
		
		String sourceCode = beUtils.getGennyToken().getUserCode();
		System.out.println("sourceCode :: " + sourceCode);
		
		String targetCode = answer.getTargetCode();
		System.out.println("targetCode :: " + targetCode);
		
		String value = answer.getValue();
		System.out.println("hcCode :: " + value);
		
		String code = value.replace("\"", "").replace("[", "").replace("]", "");
		System.out.println("code  :: " + code);

		/* Save the actual LNK_HOST_COMPANY_REP answer */
		beUtils.saveAnswer(answer);

		/* get the hcr baseentity */
		BaseEntity be = beUtils.getBaseEntityByCode(code);

		/* get the name attribute of the hcr */
		String name = be.getValue("PRI_NAME", null);		

		/* save the hcr's name as PRI_ASSOC_HCR attribute for the current target baseentity in the form */
		Answer assocHcrAnswer = new Answer(sourceCode, targetCode, "PRI_ASSOC_HCR", name);
 		beUtils.saveAnswer(assocHcrAnswer);		

		/* Retract the answer message so the rule doesn't fire again */
		retract(answer);

		output.setTypeOfResult("NONE");
		output.setResultCode("NONE");  /* dont display anything new */
		update(output);
end