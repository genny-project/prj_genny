rule "HELPER_LNK_INTERN_SUPERVISOR"
	ruleflow-group 'DataProcessing'
			salience 5000
	when
		beUtils : BaseEntityUtils()
		answer : Answer( attributeCode == "LNK_INTERN_SUPERVISOR")
		answersToSave : Answers()
		ruleDetails : RuleDetails()
		output : OutputParam( )
		serviceToken : GennyToken( code == "PER_SERVICE")
		userToken : GennyToken( code != "PER_SERVICE")

	then
		System.out.println("HELPER_LNK_INTERN_SUPERVISOR fired");
		System.out.println(ruleDetails+" "+drools.getRule().getName()+" Processing Helper INTERN SUPERVISOR Answer/Data : " + answer );
		
		String sourceCode = beUtils.getGennyToken().getUserCode();
		System.out.println("sourceCode :: " + sourceCode);
		
		String targetCode = answer.getTargetCode();
		System.out.println("targetCode :: " + targetCode);
		
		String value = answer.getValue();
		System.out.println("hcCode :: " + value);
		
		String code = value.replace("\"", "").replace("[", "").replace("]", "");
		System.out.println("code  :: " + code);

		/* Save the actual LNK_INTERN_SUPERVISOR answer */
		answersToSave.add(answer);

		/* get the supervisor baseentity */
		BaseEntity be = beUtils.getBaseEntityByCode(code);
		if(be != null){

			/* get the name attribute of the supervisor */
			String name = be.getValue("PRI_NAME", null);		

			/* save the supervisor's name as PRI_ASSOC_SUPERVISOR attribute for the current target baseentity in the form */
			Answer assocSupervisorAnswer = new Answer(sourceCode, targetCode, "PRI_ASSOC_SUPERVISOR", name);
			answersToSave.add(assocSupervisorAnswer);

		}

		update(answersToSave);

		/* Retract the answer message so the rule doesn't fire again */
		retract(answer);

		output.setTypeOfResult("NONE");
		output.setResultCode("NONE");  /* dont display anything new */
		update(output);
end