package life.genny.rules;

import life.genny.qwandautils.QwandaUtils;

import life.genny.qwanda.message.QDataAnswerMessage;
import life.genny.qwanda.message.QDataBaseEntityMessage;
import life.genny.models.GennyToken;
import life.genny.rules.QRules;
import life.genny.utils.BaseEntityUtils;
import life.genny.qwanda.Answer;
import life.genny.qwanda.Answers;
import io.vertx.core.json.JsonObject;
import java.util.Map;
import java.util.HashMap;
import life.genny.utils.VertxUtils;
import life.genny.qwanda.attribute.EntityAttribute;
import life.genny.qwanda.entity.BaseEntity;
import life.genny.qwandautils.JsonUtils;
import org.apache.commons.lang3.StringUtils;
import java.net.URLEncoder;
import java.nio.charset.StandardCharsets;
import java.io.UnsupportedEncodingException;
import life.genny.utils.DropdownUtils;


import java.util.List;
import java.util.ArrayList;

rule "HELPER_LNK_INDUSTRY"
	ruleflow-group 'DataProcessing'
			salience 5000
	when
		beUtils : BaseEntityUtils()
		answer : Answer( attributeCode == "LNK_INDUSTRY")
		answersToSave : Answers()
		ruleDetails : RuleDetails()
		output : OutputParam( )
		serviceToken : GennyToken( code == "PER_SERVICE")
		userToken : GennyToken( code != "PER_SERVICE")

	then
		System.out.println("HELPER_LNK_INDUSTRY fired");
		System.out.println(ruleDetails+" "+drools.getRule().getName()+" Processing Helper INDUSTRY SELECTION Answer/Data : " + answer );
		
		String sourceCode = beUtils.getGennyToken().getUserCode();
		System.out.println("sourceCode :: " + sourceCode);
		
		String targetCode = answer.getTargetCode();
		System.out.println("targetCode :: " + targetCode);
		
		String industryCode = answer.getValue();
		System.out.println("industryCode :: " + industryCode);
		
		String code = industryCode.replace("\"", "").replace("[", "").replace("]", "");
		System.out.println("code  :: " + code);

		Answer occupationAnswer = new Answer(sourceCode, targetCode, "LNK_OCCUPATION", " ",false,true);
		System.out.println("occupationAnswer  :: " + occupationAnswer);

		System.out.println("Saving industry and occupation answers !");

		BaseEntity baseEntity = beUtils.saveAnswer(occupationAnswer);
		baseEntity = beUtils.saveAnswer(answer);
		
		
		
		String lnk_industry = targetCode.getValue("LNK_INDUSTRY", null);
		lnk_industry = lnk_industry.replace("\"", "").replace("[", "").replace("]", "");
		BaseEntity industry_Be = beUtils.getBaseEntityByCode(lnk_industry);
		String industry = industry_Be.getValue("PRI_NAME", null);
		
		String lnk_occupation = targetCode.getValue("LNK_OCCUPATION", null);
		lnk_occupation = lnk_occupation.replace("\"", "").replace("[", "").replace("]", "");
		BaseEntity occupation_Be = beUtils.getBaseEntityByCode(lnk_occupation);
		String occupation = occupation_Be.getValue("PRI_NAME", null);
		
		System.out.println("##################################### DUDE: industry = " +industry);
 		System.out.println("##################################### DUDE: occupation = " +occupation);
		
 		Answer priIndustryAnswer = new Answer(sourceCode, targetCode, "PRI_ASSOC_INDUSTRY", industry);
 		Answer priOccupationAnswer = new Answer(sourceCode, targetCode, "PRI_ASSOC_OCCUPATION", occupation);
 		
 		beUtils.saveAnswers(priIndustryAnswer);
 		beUtils.saveAnswers(priOccupationAnswer);	
		
		
		
		/* Send the updated baseenttity to the frontend */
		QDataBaseEntityMessage msg = new QDataBaseEntityMessage(baseEntity);
		msg.setToken(beUtils.getGennyToken().getToken());
		msg.setReplace(true);
		VertxUtils.writeMsg("webcmds",JsonUtils.toJson(msg));

		/* dropdown search here */
		DropdownUtils dropdown = new DropdownUtils(serviceToken);
		dropdown.setNewSearch("Dropdown", "Fetch Dropdown Items")
											.addColumn("PRI_NAME","Name")
											.setSourceCode(code)
											.setPageStart(0)
											.setPageSize(1000);

		/* Send the dropdown options */
		dropdown.sendSearchResults("GRP_OCCUPATION_SELECTION", "LNK_ITEM", "ITEM", true, false, userToken, false);

		/* Retract the answer message so the rule doesn't fire again */
		retract(answer);

		output.setTypeOfResult("NONE");
		output.setResultCode("NONE");  /* dont display anything new */
		update(output);
end