rule "HELPER_LNK_INDUSTRY"
	ruleflow-group 'DataProcessing'
			salience 5000
	when
		beUtils : BaseEntityUtils()
		answer : Answer( attributeCode == "LNK_INDUSTRY")
		answersToSave : Answers()
		ruleDetails : RuleDetails()
		output : OutputParam( )
		serviceToken : GennyToken( code == "PER_SERVICE")
		userToken : GennyToken( code != "PER_SERVICE")

	then
		System.out.println("HELPER_LNK_INDUSTRY fired");
		System.out.println(ruleDetails+" "+drools.getRule().getName()+" Processing Helper INDUSTRY SELECTION Answer/Data : " + answer );
		
		String sourceCode = beUtils.getGennyToken().getUserCode();
		System.out.println("sourceCode :: " + sourceCode);
		
		String targetCode = answer.getTargetCode();
		System.out.println("targetCode :: " + targetCode);
		
		String industryCode = answer.getValue();
		System.out.println("industryCode :: " + industryCode);
		
		String code = industryCode.replace("\"", "").replace("[", "").replace("]", "");
		System.out.println("code  :: " + code);

		
		/*  Initialize occupation answer */
		System.out.println("Initializing the occupation answer .... ");
		Answer occupationAnswer = new Answer(sourceCode, targetCode, "LNK_OCCUPATION", " ");
		System.out.println("occupationAnswer  :: " + occupationAnswer);
		
		/* beUtils.saveAnswer(occupationAnswer); */

		/* Update the  baseEntity with industry attribute */
		/* BaseEntity baseEntity = beUtils.updateBaseEntity(targetCode,answer);
		baseEntity = beUtils.updateBaseEntity(targetCode,occupationAnswer); */
		
		answersToSave.add(answer);
		/* answersToSave.add(occupationAnswer); */
		insert(occupationAnswer);

		/* Update the baseenetity in frontend */
		/* QDataBaseEntityMessage msg = new QDataBaseEntityMessage(baseEntity);
		msg.setToken(beUtils.getGennyToken().getToken());
		msg.setReplace(true); */

		/* send the BE messsage */
		/* VertxUtils.writeMsg("webcmds",JsonUtils.toJson(msg));
		System.out.println("msg  :: " + msg); */

		/* dropdown search here */
		DropdownUtils dropdown = new DropdownUtils(serviceToken);
		System.out.println("dropdown  :: " + dropdown);
		dropdown.setNewSearch("Dropdown", "Fetch Dropdown Items")
											.addColumn("PRI_NAME","Name")
											.setSourceCode(code)
											.setPageStart(0)
											.setPageSize(1000);
		System.out.println("dropdown  :: " + dropdown);

		dropdown.sendSearchResults("GRP_OCCUPATION_SELECTION", "LNK_ITEM", "ITEM", true, false, userToken, false);
		System.out.println("dropdown  :: " + dropdown);
		
		retract(answer);
		update(answersToSave);

		output.setTypeOfResult("NONE");
		output.setResultCode("NONE");  /* dont display anything new */
end