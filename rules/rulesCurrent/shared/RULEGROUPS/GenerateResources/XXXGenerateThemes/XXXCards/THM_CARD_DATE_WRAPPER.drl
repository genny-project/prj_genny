rule "THM_CARD_DATE_WRAPPER"
    ruleflow-group 'GenerateThemes'
    no-loop true
    
    when
      not  Theme (code == "THM_CARD_DATE_WRAPPER")
      serviceToken : GennyToken( code == "PER_SERVICE")
      
    then
    
     	System.out.println("   Generate THM_CARD_DATE_WRAPPER Rule ");
 
		Theme theme = Theme.builder("THM_CARD_DATE_WRAPPER")
                                .addAttribute()
						                      .flexDirection("row")
                                .end()
                                .build();

		theme.setRealm(serviceToken.getRealm());
		
		insert(theme);

		VertxUtils.putObject(serviceToken.getRealm(), "", theme.getCode(), theme, serviceToken);
	 
end
