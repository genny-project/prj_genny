package life.genny.rules;

import life.genny.qwanda.message.QEventBtnClickMessage;
import life.genny.models.GennyToken;
import life.genny.utils.VertxUtils;
import io.vertx.core.json.JsonObject;
import life.genny.utils.OutputParam;

rule "TREE_ITEM_CLICK_EVENT"
    ruleflow-group 'EventProcessing'
		salience 2
    no-loop
    when
		$message : QEventMessage(data.code matches "QUE_.*" && (data.parentCode == "QUE_DASHBOARD_VIEW" || data.parentCode == "QUE_TAB_VIEW"))
		output : OutputParam( )
		ruleDetails : RuleDetails()
    then
		System.out.println(ruleDetails+" "+drools.getRule().getName()+" Processing : " + $message );
		System.out.println("Parent code :  " + $message.getData().getParentCode());

		String code = $message.getData().getCode();
		if(code.matches("(.*)_MENU_GRP")) {
			String tempCode = code.split("_MENU_GRP")[0];
			String newCode = tempCode + "_GRP";
			code = newCode;
			System.out.println("newCode :: " + code);
		}

		output.setFormCode("FRM_"+ code,"FRM_CONTENT");
		retract( $message);
		
	end
