package life.genny.rules;

import life.genny.qwanda.message.QEventMessage;
import life.genny.models.GennyToken;
import life.genny.utils.VertxUtils;
import io.vertx.core.json.JsonObject;
import life.genny.utils.OutputParam;
import org.apache.commons.lang3.StringUtils;
import life.genny.qwanda.message.QCmdMessage;
import life.genny.utils.VertxUtils;


rule "ADD_ENTITY_CLICK_EVENT"
    ruleflow-group 'EventProcessing'
		salience 2
    no-loop
    when
		$message : QEventMessage(data.code matches "QUE_.*" && data.parentCode == "QUE_ADD_ITEMS_GRP" )
		userToken : GennyToken (code != "PER_SERVICE" )
		output : OutputParam( )
 		ruleDetails : RuleDetails()
    then

		System.out.println(ruleDetails+" "+drools.getRule().getName()+" Processing : " + $message );
		
		/* 		
		code: "QUE_INTERNSHIP_MENU"
		parentCode: "QUE_ADD_ITEMS_GRP"
		targetCode: "PER_D20090A3-321B-47E3-8C95-61FEAE84EEB4"
		*/
		
		String code = $message.getData().getCode(); 								/* QUE_INTERNSHIP_MENU */
		String workflowSignalCode = StringUtils.removeEnd(code, "_MENU");			/* QUE_INTERNSHIP */
		workflowSignalCode = StringUtils.removeStart(workflowSignalCode,"QUE_"); 	/* INTERNSHIP */


		output.setTypeOfResult("SIGNAL");											/* SIGNAL */
		output.setResultCode("START_ADD_ENTITY");									/* START_ADD_ENTITY */
		output.setTargetCode($message.getData().getTargetCode());					/* PER_D20090A3-321B-47E3-8C95-61FEAE84EEB4 */
		output.setSuitCase(workflowSignalCode);										/* INTERNSHIP */
		
		
		System.out.println("START SIGNAL: " +workflowSignalCode);
		System.out.println("STARTING ADD_ENTITY WORKFLOW WITH: " +output);


		retract( $message);
	end